</head>
<body>
    


<form action="/dologin" method="post">
	<div>
		{{#if error}}
		<p class="err-msg">Username or password is incorrect</p>
		{{/if }}
		<h1>Login</h1>
	</div>
	<div class="form-group">
		<label>Username: </label>
		<input 
			type="text" 
			name="txtName" 
			id="username" 
			placeholder="Enter your username" 
			required />
	</div>
	<div class="form-group">
		<label>Password:</label>
		<input 
			type="password" 
			name="txtPassword" 
			id="password"
			placeholder="Enter your password" 
			required />
	</div>
	<div>
		<input type="submit" value="Login" />
		<br>
		<strong>Don't have an account?<a href="register" style="color: yellow;"> Sign Up</a></strong>
	</div>
</form>
</body>